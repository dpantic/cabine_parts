<%- model_class = Spm -%>
<div class="page-header">
  <!-- <h1><%#=t '.title', :default => model_class.model_name.human.titleize.upcase %></h1> -->
  <h1>SPM List</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sortable model_class.human_attribute_name(:id) %></th>
      <th><%= sortable model_class.human_attribute_name(:spm_ref) %></th>
      <th><%= sortable model_class.human_attribute_name(:bauteil) %></th>
      <th><%#= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @spms.each do |spm| %>
      <tr>
        <td><%= link_to spm.id, spm_path(spm) %></td>
        <td><%= spm.spm_ref %></td>
        <td><%= spm.bauteil %></td>
        <td><%#=l spm.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_spm_path(spm), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      spm_path(spm),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_spm_path,
            :class => 'btn btn-primary' %>
<div>
</br>
<footer class="footer">

    <nav>
      <h3>Import SPM-File</h3>
      <%= form_tag import_spms_path, multipart: true do %>
      <%= file_field_tag :file, :class => 'btn btn-mini' %>
      <%= submit_tag "Import", :class => 'btn btn-primary' %>
    <% end %>
    </div>
  </nav>
</footer>