<%= form_for @material, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :product_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :product_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :add_infos, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :add_infos, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mat_nr, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mat_nr, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :part_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :part_number, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                materials_path, :class => 'btn' %>
  </div>
<% end %>
